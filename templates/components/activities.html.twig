{% block activities %}

<div class="activitiesContainer">

<div class="subtitlesActivitiesContainer">
    <div class="pictoAndSubtitleActivities">
        <div class="pictoActivities"><i class="fa-solid fa-layer-group"></i></div>
        <h3> Activities</h3>
    </div>
    <div class="separateSubtitlesActivities"></div>
</div>



    {% for activity in activities %}
{# {% if activity.getResort() is not null and selectedResort is not null and activity.getResort().getId() ==
    selectedResort.getId() %} #}
    <div 
    meta-resort-id={{ activity.resort.id }}
    class="activitiesContainer"
    style="background-image: url('{{ asset("img/Activities/" ~ activity.getImage) }}'); 
    background-size: cover;
    background-attachment: fixed;
    background-position: center center;
    display: flex; 
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 400px;
    margin: 20px 0px;">
        <div class="activitiesInformations">
            <div class="activitiesInformationsTitle">
                <i class="fa-solid fa-caret-right"></i>
                <h3>{{ activity.getName }}</h3>
            </div>
            <p>{{ activity.getDescription }}</p>
                    </div>
    </div>
{# {% endif %} #}
    {% endfor %}


</div>






<style>
    .subtitlesActivitiesContainer {
        width: 80%;
        max-width: 1000px;
        margin: auto;
        margin-top: 80px;
        left: auto;
        right: auto;
    }

    .pictoAndSubtitleActivities {
        display: flex;
        align-items: center;
    }

    .pictoActivities {
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 8px 10px;
        margin-right: 10px;
        background: linear-gradient(to top right, #F33A00, #F3002C);
        border-radius: 2px;
    }

    .pictoActivities h3 {
        font-size: 20px;
        color: white;
    }

    .separateSubtitlesActivities {
        width: 100%;
        height: 1px;
        background-image: linear-gradient(to right, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 50%, rgba(255, 255, 255, 0) 100%);
        margin: auto;
        margin-top: 10px;
        margin-bottom: 10px;
    }





    .activitiesInformations {
        display: flex flex-direction: column;
        width: 100%;
        max-width: 400px;
        background: linear-gradient(to top right, #ffffff30, #ffffff15);
        backdrop-filter: blur(10px);
        padding: 20px;
        border: 1px solid #ffffff33;
        border-radius: 3px;
        gap: 10px;
        box-shadow: 0px 8px 30px #00000055;
        text-shadow: 0px 0px 8px black;
    }

    .activitiesInformationsTitle {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .activitiesInformationsTitle i {
        color: white;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 10px;
        background: linear-gradient(to top right, #F33A00, #F3002C);
        border-radius: 2px;
    }

    .activitiesInformations span {
        font-weight: 800
    }


    .activitiesInformations.right {
        margin-left: auto;
        margin-right: 20%;
    }

    .activitiesInformations.left {
        margin-left: 20%;
        margin-right: auto;
    }
</style>

{% endblock %}