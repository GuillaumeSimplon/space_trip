{% block activities %}


<div class="activitiesContainer">

    <div class="subtitlesContainer">
        <div class="pictoAndSubtitle">
            <div class="picto"><i class="fa-solid fa-layer-group"></i></div>
            <h3> Activities</h3>
        </div>
        <div class="separateSubtitles"></div>
    </div>



    {% for activity in activities %}
    {% if activity.getResort() is not null and selectedResort is not null and activity.getResort().getId() ==
    selectedResort.getId() %}
    <div class="activitiesContainer"
    style="background-image: url('{{ asset("img/Activities/" ~ activity.getImage) }}'); 
    background-size: cover;
    background-attachment: fixed;
    background-position: center center;
    display: flex; 
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 400px;
    margin: 20px 0px;">
        <div class="activitiesInformations">
            <div class="activitiesInformationsTitle">
                <i class="fa-solid fa-caret-right"></i>
                <h3>{{ activity.getName }}</h3>
            </div>
            <p>{{ activity.getDescription }}</p>
        </div>
    </div>
    {% endif %}
    {% endfor %}


</div>






<style>
    .activitiesInformations {
        display: flex flex-direction: column;
        width: 100%;
        max-width: 400px;
        background: linear-gradient(to top right, #ffffff30, #ffffff15);
        backdrop-filter: blur(10px);
        padding: 20px;
        border: 1px solid #ffffff33;
        border-radius: 3px;
        gap: 10px;
        box-shadow: 0px 8px 30px #00000055;
        text-shadow: 0px 0px 8px black;
    }

    .activitiesInformationsTitle {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .activitiesInformationsTitle i {
        color: white;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 10px;
        background: linear-gradient(to top right, #F33A00, #F3002C);
        border-radius: 2px;
    }

    .activitiesInformations span {
        font-weight: 800
    }


    .activitiesInformations.right {
        margin-left: auto;
        margin-right: 20%;
    }

    .activitiesInformations.left {
        margin-left: 20%;
        margin-right: auto;
    }
</style>

{% endblock %}