{# templates/components/carouselResort.html.twig #}

{% block carouselResort %}

<div class="resortsCardsContainer">

    {% for resort in resorts %}
    <a href="{{ path('app_resorts', {'id': resort.getId()}) }}" class="resortCard">
        <div class="gradientOverlay">
            <img src="{{ asset('img/Resorts/' ~ resort.getImage()) }}" draggable="false" alt="">
            <div class="resortCardInformations">
                <h4>{{ resort.getName() }}</h4>
                <p>{{ resort.getPlace() }}</p>
            </div>
            <p class="Look">Look</p>
        </div>
    </a>
    {% endfor %}

</div>

<style>
    .resortsCardsContainer {
        width: 100%;
        max-width: 80%;
        margin: 30px auto;
        gap: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
    }

    .resortCard {
        position: relative;
        width: 100%;
        max-width: 150px;
        height: 300px;
        border: 1px solid #008cfe88;
        border-radius: 4px;
        display: flex;
        justify-content: center;
        box-shadow: 0px 8px 20px -8px #008cfe;
        overflow: hidden;
        transition: 0.3s;
    }

    .resortCard:hover {
        border: 1px solid #008cfe;
        box-shadow: 0px 8px 20px -4px #008cfe;
    }

    .gradientOverlay {
        position: relative;
        width: 100%;
        height: 100%;
    }

    .resortCard img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 2px;
    }

    .resortCardInformations,
    .Look {
        position: absolute;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: start;
        width: 100%;
        z-index: 2;
    }

    .resortCardInformations {
        top: 20%;
        transform: translateY(-50px);
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 10px;
    }

    .resortCardInformations h4 {
        font-size: 16px;
        font-weight: 800;
        text-transform: uppercase;
        padding: 10px;
        text-shadow: 0px 0px 12px orange;
    }

    .resortCardInformations p {
        font-size: 14px;
        padding: 10px;
        text-shadow: 0px 0px 8px rgb(0, 145, 255), 0px 0px 20px black;
    }

    .Look {
        opacity: 0;
        bottom: 10px;
        font-size: 14px;
        font-weight: 600;
        text-shadow: 0px 0px 8px rgb(0, 145, 255), 0px 0px 20px black;
        transition: 0.3s;
    }

    .resortCard:hover .Look {
        opacity: 1;
    }

    .resortCard img {
        transition: transform 0.3s ease;
    }

    .resortCard:hover img {
        transform: scale(1.1);
    }

    .gradientOverlay::before {
        content: "";
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        background: linear-gradient(to top, #00071F, transparent, #00071F);
        z-index: 1;
    }
</style>

{% endblock %}