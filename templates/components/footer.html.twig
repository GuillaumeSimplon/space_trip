{% block footer %}


<footer class="footerContainer">


    <div class="footerTop">

        <img src="{{ asset('img/logoWhite.svg') }}" alt="logo">

        <div class="footerSeparate"></div>

        <div class="footerLinks">
            <h3>Links</h3>
            <a href="{{ path('app_resorts')}}">Destinations</a>
            <a href="{{ path('app_home') }}#extraContainer">Extra programs</a>
            <a href="{{ path('app_booking')}}">Reservation</a>
            <a href="#">Faq</a>
        </div>

        <div class="footerSeparate"></div>

        <div class="footerLegalInformations">
            <h3>Legal informations</h3>
            <a href="#">Terms and Conditions</a>
            <a href="#">Privacy Policy</a>
            <a href="#">Legal Notice</a>
            <a href="#">Site Map</a>
        </div>

        <div class="footerSeparate"></div>

        <div class="footerSocial">
            <h3>Social Media</h3>
            <a href="#"><i class="fa-brands fa-square-youtube"></i>Youtube</a>
            <a href="#"><i class="fa-brands fa-square-instagram"></i>Instagram</a>
            <a href="#"><i class="fa-brands fa-square-facebook"></i>Facebook</a>
            <a href="#"><i class="fa-brands fa-square-twitter"></i>Twitter</a>
        </div>

    </div>



    <div class="footerMiddle">

    </div>



    <div class="footerBottom">
        <p>Â© 2023 spacetrip.com</p>
    </div>


    <button class="scrollToTop" onclick="scrollToTop()">
        <i class="fa-solid fa-caret-up"></i>
    </button>

</footer>




<style>
    .footerContainer {
        position: relative;
        display: flex;
        flex-direction: column;
    }


    .footerTop {
        width: 100%;
        height: 250px;
        background: radial-gradient(at 50% 0%, #032088, #00071F);
        display: flex;
        justify-content: space-evenly;
        align-items: center;
    }

    .footerTop img {
        width: 120px;
    }

    .footerLinks,
    .footerLegalInformations,
    .footerSocial {
        display: flex;
        flex-direction: column;
        color: white;
        gap: 5px;
    }

    .footerLinks h3,
    .footerLegalInformations h3,
    .footerSocial h3 {
        margin-bottom: 20px;
        font-size: 16px;
    }

    .footerLinks a,
    .footerLegalInformations a,
    .footerSocial a {
        text-decoration: none;
        color: #92a7ef;
        font-size: 14px;
        display: flex;
        align-items: center;
        gap: 20px;
        transition: 0.3s;
    }

    .footerLinks a:hover,
    .footerLegalInformations a:hover,
    .footerSocial a:hover {
        color: white;
    }

    .footerSeparate {
        width: 1px;
        height: 80%;
        background: linear-gradient(to top, #ffffff00, #fff, #ffffff00);
    }

    @media only screen and (max-width: 600px) {
        .footerTop {
            flex-direction: column;
            gap: 20px;
            height: 100%;
            padding: 20px 0;
        }

        .footerSeparate {
            width: 100px;
            height: 1px;
            background: linear-gradient(to right, #ffffff00, #fff, #ffffff00);
        }
    }




    .footerMiddle {
        width: 100%;
        height: 1px;
        background: linear-gradient(to right, #ffffff00, #fff, #ffffff00);
    }




    .footerBottom {
        width: 100%;
        height: 50px;
        background-color: #00071F;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .footerBottom p {
        color: white;
        font-size: 13px;
    }


    .scrollToTop {
        position: absolute;
        right: 20px;
        bottom: 40px;
        width: 30px;
        height: 30px;
        background: linear-gradient(to top right, #F33A00, #F3002C);
        box-shadow: 0px 0px 10px #00000055;
        border-radius: 3px;
        border: 2px solid #ffffff15;
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: 0.3s;
        cursor: pointer;
    }

    .scrollToTop:hover {
        border: 2px solid #ffffff;
        box-shadow: 0px 0px 12px#ffcfd899;
    }
</style>



<script>
    function scrollToTop() {
        window.scrollTo({
            top: 0,
            behavior: "smooth"
        });
    }
</script>

{% endblock %}